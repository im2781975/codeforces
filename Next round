/* https://codeforces.com/problemset/problem/158/A?mobile=false */
#include<stdio.h>
int main()
{
    int i,n,k,ans=0;
    int arr[50];
    scanf("%d%d",&n,&k);
    for(i=1;i<=n;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=1;i<=n;i++)
    {
        if(arr[i]>=arr[k] && arr[i]>0)
        ans++;
        
    }
    printf("%d",ans);
}
