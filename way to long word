/*https://codeforces.com/problemset/problem/71/A?mobile=false */
#include<stdio.h>
#include<string.h>
int main()
{
    int i,n;
    char ch[100];
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
    fgets(ch,sizeof(ch),stdin);
    int l=strlen(ch)-1;
    if(l>=10)
    {
        printf("%c%d%c\n",ch[0],l-2,ch[l-1]);
    }
    else
    puts(ch);
    }
    
}
