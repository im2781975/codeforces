/* https://codeforces.com/problemset/problem/1660/A
*/
#include<stdio.h>
int main()
{
    int t;
    scanf("%d", &t);
    while(t--){
        int a, b, i;
        scanf("%d%d", &a, &b);
        if(a==0)
            printf("1\n");
        else
            printf("%d\n", (a+(b*2)+1));
    }
    return 0;
}
